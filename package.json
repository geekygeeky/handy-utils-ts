{
  "name": "handy-utils-ts",
  "version": "1.0.1",
  "description": "A lightweight utility library with handy string, number and array helpers.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./str": {
      "types": "./dist/core/str.d.ts",
      "import": "./dist/core/str.js",
      "require": "./dist/core/str.cjs"
    },
    "./num": {
      "types": "./dist/core/num.d.ts",
      "import": "./dist/core/num.js",
      "require": "./dist/core/num.cjs"
    },
    "./arr": {
      "types": "./dist/core/arr.d.ts",
      "import": "./dist/core/arr.js",
      "require": "./dist/core/arr.cjs"
    },
    "./misc": {
      "types": "./dist/core/arr.d.ts",
      "import": "./dist/core/arr.js",
      "require": "./dist/core/arr.cjs"
    },
    "./global": {
      "types": "./dist/global.d.ts",
      "import": "./dist/global.js",
      "require": "./dist/global.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geekygeeky/handy-utils.git"
  },
  "keywords": [
    "handy-utils",
    "typescript",
    "strings",
    "helper-functions",
    "arrays",
    "numbers"
  ],
  "author": "Olushola (GeekyGeeky)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geekygeeky/handy-utils/issues"
  },
  "homepage": "https://github.com/geekygeeky/handy-utils#readme",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}